{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/hooks/*": ["shared/hooks/*"],
      "@/lib/*": ["shared/lib/*"],
      "@/shared/*": ["shared/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "features/**/*.ts",
    "features/**/*.tsx",
    "providers/**/*.ts",
    "providers/**/*.tsx",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "api"]
}
